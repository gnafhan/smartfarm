# Production Environment Variables
# Copy this file to .env and update with your production values

# ============================================
# MongoDB Configuration
# ============================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme123_use_strong_password

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=changeme123_use_strong_password

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@livestock.com

# ============================================
# Frontend URLs
# ============================================
# For local network access (e.g., 192.168.1.100)
NEXT_PUBLIC_API_URL=http://192.168.1.100:3001
NEXT_PUBLIC_WS_URL=http://192.168.1.100:3001

# For domain with Nginx
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com

# ============================================
# CORS Configuration
# ============================================
# Allow frontend to access backend
CORS_ORIGIN=http://192.168.1.100:3000

# For domain with Nginx
# CORS_ORIGIN=https://yourdomain.com

# ============================================
# Nginx Configuration (if using)
# ============================================
DOMAIN_NAME=yourdomain.com
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
